{
  "name": "aligent/orocommerce-announcement-bundle",
  "description": "OroCommerce Bundle to display Announcement Messages on Storefront",
  "type": "library",
  "license": "GPL-3.0-only",
  "autoload": {
    "psr-4": {
      "Aligent\\AnnouncementBundle\\": "./src/Aligent/AnnouncementBundle"
    },
    "exclude-from-classmap": [
      "/src/Aligent/AnnouncementBundle/Tests/"
    ]
  },
  "repositories": {
    "oro": {
      "type": "composer",
      "url": "https://packagist.orocrm.com"
    }
  },
  "config": {
    "bin-dir": "bin"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "oro/commerce": "5.1.*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "phpstan/phpstan": "^1.7",
    "phpmd/phpmd": "^2.12",
    "friendsofphp/php-cs-fixer": "~2.18.2 || ~2.19.0",
    "symfony/phpunit-bridge": "~4.4.24 || ~6.1.0",
    "squizlabs/php_codesniffer": "^3.6"
  }
}
