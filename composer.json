{
  "name": "aligent/orocommerce-announcement-bundle",
  "description": "OroCommerce Bundle to display Announcement Messages on Storefront",
  "type": "library",
  "license": "GPL-3.0-only",
  "autoload": {
    "psr-4": {
      "Aligent\\AnnouncementBundle\\": "./src/Aligent/AnnouncementBundle"
    },
    "exclude-from-classmap": [
      "/src/Aligent/AnnouncementBundle/Tests/"
    ]
  },
  "repositories": {
    "oro": {
      "type": "composer",
      "url": "https://packagist.orocrm.com"
    }
  },
  "config": {
    "bin-dir": "bin",
    "allow-plugins": {
      "symfony/flex": true,
      "symfony/runtime": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "oro/commerce": "5.1.*"
  },
  "require-dev": {
    "phpunit/phpunit": "~9.5.27",
    "phpstan/phpstan": "^1.7",
    "phpmd/phpmd": "~2.13.0",
    "friendsofphp/php-cs-fixer": "~3.13.1",
    "symfony/phpunit-bridge": "~5.4.17",
    "squizlabs/php_codesniffer": "~3.7.1"
  }
}
